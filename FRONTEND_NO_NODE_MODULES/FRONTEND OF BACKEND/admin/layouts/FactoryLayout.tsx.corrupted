        </Dialog>
      </Transition>

      <CommandPalette open={paletteOpen} onClose={() => setPaletteOpen(false)} />

      <TutorialGuide
        steps={tutorialSteps}
        enabled={tutorialOpen}
        onExit={() => setTutorialOpen(false)}
      />
    </div>
  );
}
