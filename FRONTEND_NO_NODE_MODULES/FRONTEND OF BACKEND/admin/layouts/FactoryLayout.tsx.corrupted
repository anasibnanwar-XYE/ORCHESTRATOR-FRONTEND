import React, { Fragment, useMemo, useState } from 'react';
import { NavLink, Outlet, useNavigate, useLocation } from 'react-router-dom';
import { Dialog, Menu, Transition } from '@headlessui/react';
import {
  Menu as MenuIcon,
  X,
  Search,
  Moon,
  Sun,
  ChevronLeft,
  HelpCircle
} from 'lucide-react';
import TutorialGuide from '../components/TutorialGuide';
import { getStepsForPath } from '../lib/tutorialSteps';
import clsx from 'clsx';
import { useAuth } from '../context/AuthContext';

interface FactoryLayoutProps {
  theme: 'dark' | 'light';
  onThemeChange: (t: 'dark' | 'light') => void;
}

function CommandPalette({ open, onClose }: { open: boolean; onClose: () => void }) {
  const navigate = useNavigate();
  const items = useMemo(
    () => [
      { label: 'Dashboard', to: '/factory' },
      { label: 'Order Queue', to: '/factory/orders' },
      { label: 'Production', to: '/factory/batches' },
      { label: 'Bulk Packing', to: '/factory/packing' },
      { label: 'Raw Materials', to: '/factory/raw-materials' },
      { label: 'Finished Goods', to: '/factory/finished-goods' },
      { label: 'Size Mappings', to: '/factory/packaging-mappings' },
      { label: 'Stock Adjustments', to: '/factory/adjustments' },
      { label: 'Dispatch', to: '/factory/dispatch' },
      { label: 'Inventory', to: '/factory/inventory' },
      { label: 'Tasks', to: '/factory/tasks' },
    ],
    []
  );
  const [q, setQ] = useState('');
  const filtered = items.filter((i) => i.label.toLowerCase().includes(q.toLowerCase()));
  return (
    <Transition show={open} as={Fragment}>
      <Dialog onClose={onClose} className="relative z-50">
        <Transition.Child as={Fragment} enter="ease-out duration-150" enterFrom="opacity-0" enterTo="opacity-100" leave="ease-in duration-100" leaveFrom="opacity-100" leaveTo="opacity-0">
          <div className="fixed inset-0 bg-black/30 backdrop-blur-sm" />
        </Transition.Child>
        <div className="fixed inset-0 flex items-start justify-center p-6 pt-20">
          <Transition.Child as={Fragment} enter="ease-out duration-150" enterFrom="opacity-0 translate-y-4" enterTo="opacity-100 translate-y-0" leave="ease-in duration-100" leaveFrom="opacity-100 translate-y-0" leaveTo="opacity-0 translate-y-4">
            <Dialog.Panel className="w-full max-w-xl rounded-xl border border-[var(--border-primary)] bg-white p-2 text-[var(--text-primary)] shadow-2xl dark:border-zinc-700 dark:bg-[var(--bg-surface)] dark:text-white">
              <div className="flex items-center gap-2 border-b border-[var(--border-primary)] px-3 py-2 dark:border-[var(--border-primary)]">
                <Search className="h-4 w-4 text-[var(--text-secondary)]" />
                <input
                  autoFocus
                  className="h-8 flex-1 bg-transparent text-sm text-[var(--text-primary)] outline-none placeholder:text-[var(--text-tertiary)] dark:text-white"
                  placeholder="Type to jump..."
                  value={q}
                  onChange={(e) => setQ(e.target.value)}
                  onKeyDown={(e) => {
                    if (e.key === 'Enter') {
                      const target = filtered[0];
                      if (target) {
                        navigate(target.to);
                        onClose();
                      }
                    }
                  }}
                />
              </div>
              <ul className="mt-2 max-h-64 overflow-y-auto py-1">
                {filtered.map((item) => (
                  <li key={item.to}>
                    <button
                      type="button"
                      onClick={() => {
                        navigate(item.to);
                        onClose();
                      }}
                      className="block w-full rounded-lg px-3 py-2 text-left text-sm hover:bg-[var(--bg-surface-highlight)] dark:hover:bg-zinc-800"
                    >
                      {item.label}
                    </button>
                  </li>
                ))}
                {filtered.length === 0 && <li className="px-3 py-2 text-sm text-[var(--text-secondary)]">No results</li>}
              </ul>
            </Dialog.Panel>
          </Transition.Child>
        </div>
      </Dialog>
    </Transition>
  );
}

import { resolvePortalAccess, shouldShowPortalSelection } from '../types/portal-routing';

