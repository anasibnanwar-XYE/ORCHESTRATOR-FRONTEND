        <div className="mb-8 px-2">
          <p className="text-xs font-bold uppercase tracking-wider text-[var(--text-secondary)] dark:text-[var(--text-tertiary)]">ORCHESTRATOR ERP</p>
          <p className="text-base font-bold text-[var(--text-primary)] dark:text-white">Factory</p>
        </div>
        <nav className="space-y-0.5 text-sm">
          {shouldShowPortalSelection(portalAccess) && (
            <>
              <button
                type="button"
                onClick={() => navigate('/portals')}
                className="group flex w-full items-center gap-3 rounded-lg px-3 py-2 text-[var(--text-secondary)] hover:bg-zinc-50 hover:text-[var(--text-primary)] dark:text-[var(--text-tertiary)] dark:hover:bg-zinc-800 dark:hover:text-zinc-200"
              >
                <ChevronLeft className="h-4 w-4" />
                Back to Portals
              </button>
              <div className="my-4 h-px bg-[var(--bg-surface-highlight)] dark:bg-[var(--bg-surface-highlight)]" />
            </>
          )}
          {productionNav.map((item) => (
            <NavLink
              key={item.to}
              to={item.to}
              className={({ isActive }) =>
                clsx(
                  'group flex items-center rounded-lg px-3 py-2.5 font-medium transition-all',
                  isActive
                    ? 'bg-[var(--bg-surface-highlight)] text-[var(--text-primary)] dark:bg-[var(--bg-surface-highlight)] dark:text-white shadow-sm'
