                          >
                            Profile
                          </NavLink>
                        )}
                      </Menu.Item>
                      <Menu.Item>
                        {({ active }) => (
                          <NavLink
                            to="/settings"
                            className={clsx('flex w-full items-center rounded-lg px-3 py-2 text-sm transition-colors', active ? 'bg-[var(--bg-surface-highlight)] text-[var(--text-primary)] dark:bg-[var(--bg-surface-highlight)] dark:text-white' : 'text-zinc-700 dark:text-zinc-300')}
                          >
                            Settings
                          </NavLink>
                        )}
                      </Menu.Item>
