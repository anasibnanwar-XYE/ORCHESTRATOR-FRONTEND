                </div>
                <nav className="space-y-1 text-sm">
                  {shouldShowPortalSelection(portalAccess) && (
                    <>
                      <button
                        type="button"
                        onClick={() => {
                          setMobileOpen(false);
                          navigate('/portals');
                        }}
                        className="flex w-full items-center gap-3 rounded-lg px-3 py-2 text-[var(--text-secondary)] hover:bg-zinc-50 dark:text-[var(--text-tertiary)] dark:hover:bg-zinc-800"
                      >
                        <ChevronLeft className="h-5 w-5" />
                        Back to Portals
                      </button>
                      <div className="my-4 h-px bg-[var(--bg-surface-highlight)] dark:bg-[var(--bg-surface-highlight)]" />
                    </>
                  )}
                        )
                      }
                    >
                      {item.name}
                    </NavLink>
                  ))}

                  <div className="my-4 h-px bg-[var(--bg-surface-highlight)] dark:bg-[var(--bg-surface-highlight)]" />

                  <NavLink
                    to="/profile"
                    onClick={() => setMobileOpen(false)}
                    className={({ isActive }) =>
                      clsx(
                        'flex items-center rounded-lg px-3 py-2.5 font-medium transition-colors',
                        isActive
                          ? 'bg-[var(--bg-surface-highlight)] text-[var(--text-primary)] dark:bg-[var(--bg-surface-highlight)] dark:text-white'
